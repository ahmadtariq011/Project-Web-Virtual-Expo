@using VirtualExpo.Model.Data
@using VirtualExpo.Model.Enums
@using VirtualExpo.Bll
@using VirtualExpo.Bll.Helpers
@using System
@section Scripts
{
    <script src="~/js/ExpoAdmin/MediaLinks.js?v=@DateTime.Now.Ticks.ToString()"></script>
}
@{
    bool IsAdmin = User.IsInRole(UserRoleType.Admin.ToString());
    bool IsOrganizer = User.IsInRole(UserRoleType.Organizer.ToString());
    bool IsExhibitor = User.IsInRole(UserRoleType.Exhibitor.ToString());
    string typeofUserLogin = "";
    if (IsAdmin)
    {
        typeofUserLogin = "Admin";
    }
    if (IsOrganizer)
    {
        typeofUserLogin = "Organizer";
    }
    if (IsExhibitor)
    {
        typeofUserLogin = "Exhibitor";
    }
    var data = (SocialNetwork)ViewBag.data;
    var Title = ViewBag.title;
    var ExhibitionId = ViewBag.ExhibitorDescription;


}
<input type="hidden" id="hfUserId" value="@data.Id" />
<input type="hidden" id="hfOrganizerid" value="@Convert.ToInt32(User.Identity.Name)" />
<input type="hidden" id="hfExhibitorId" value="@ExhibitionId" />
<div class="row">

    <!--
    start Lead
    -->
    <div class="col-lg-12">
        <div id="BasicInfo1" class="card" style="padding-bottom: 0px !important; margin-bottom: 0px;">
            <div class="card-header">
                <strong>@Title</strong>
            </div>

            <div class="card-body card-block">
                <div id="div_message" class="note failure">
                    <p>
                        <span id="span_message"></span>
                    </p>
                </div>
                <br />
                <div class="row form-group">
                    <div class="col col-md-2"><label for="hf-email" class=" form-control-label">Facebook</label></div>
                    <div class="col-12 col-md-3">
                        <input class="form-control" id="txtFacebookName" type="text" value="@data.Facebook">
                    </div>
                    <div class="col offset-md-1 col-md-2"><label for="hf-email" class=" form-control-label">Instagram</label></div>
                    <div class="col-md-3">
                        <input class="form-control" id="txtInstagramName" type="text" value="@data.Instagram">
                    </div>
                </div>
                <div class="row form-group">
                    <div class="col col-md-2"><label for="hf-email" class=" form-control-label">Twitter</label></div>
                    <div class="col-12 col-md-3">
                        <input class="form-control" id="txtTwitter" type="text" value="@data.Twitter">
                    </div>
                    <div class="col offset-md-1 col-md-2"><label for="hf-email" class=" form-control-label">SnapChat</label></div>
                    <div class="col-md-3">
                        <input class="form-control" id="txtSnapcat" type="text" value="@data.SnapChat">
                    </div>
                </div>
                <div class="row form-group">
                    <div class="col col-md-2"><label for="hf-email" class=" form-control-label">Linkdin</label></div>
                    <div class="col-12 col-md-3">
                        <input class="form-control" id="txtLinkdin" type="text" value="@data.Linkdin">
                    </div>
                    <div class="col offset-md-1 col-md-2"><label for="hf-email" class=" form-control-label">Website</label></div>
                    <div class="col-md-3">
                        <input class="form-control" id="txtWebsite" type="text" value="@data.Website">
                    </div>
                </div>
                <br />
            </div>
            <div class="card-footer">
                <button type="button" class="btn btn-primary btn-sm" onclick="UploadSocialNetwork();">
                    <i class="material-icons " id="iconcss" style="">save</i>Save
                </button>
            </div>
        </div>
    </div>
</div>