                    <div class="col-12  col-md-3">
                        <input class="form-control" id="txtDesignation" type="text" value="@workExperienceData.Designation" required maxlength="20">
                    </div>
                </div>
                <div class="row form-group">
                    <div class="col col-md-2"><label for="hf-email" class=" form-control-label">From </label></div>
                    <div class="col-12 col-md-3">
                        <input class="form-control" id="txtFrom" type="datetime" value="@workExperienceData.From" required maxlength="20">
                    </div>
                    <div class="col offset-md-1 col-md-2"><label for="hf-email" class=" form-control-label">To</label></div>
                    <div class="col-12  col-md-3">
                        <input class="form-control" id="txtTo" type="datetime" value="@workExperienceData.To" required maxlength="500">
                    </div>
                </div>
                <div class="row form-group">
                    <div class="col col-md-2"><label for="hf-email" class=" form-control-label">Industry </label></div>
                    <div class="col-12 col-md-3">
                        <input class="form-control" id="txtIndustryName" type="text" value="@workExperienceData.IndustryName" required maxlength="20">
                    </div>
                    <div class="col offset-md-1 col-md-2"><label for="hf-email" class=" form-control-label">WorkingStatus</label></div>
                    <div class="col-12 col-md-3">
                        <select class="form-control" id="txtWorkingStatus" name="txtWorkingStatus" required>
                            @foreach (var gender in workingstatuses)
                            {
                                if (gender == WorkingStatus)
                                {
                                    <option id="genders" selected>@gender</option>
                                }
                                else
                                {
                                    <option id="genders">@gender</option>
                                }
                            }
                        </select>
                    </div>
                </div>
                <div class="row form-group">
                    <div class="col col-md-2"><label for="hf-email" class=" form-control-label">Location</label></div>
                    <div class="col-12  col-md-3">
                        <input class="form-control" id="txtLocation" type="text" required value="@workExperienceData.Location" maxlength="20">
                    </div>
                </div>

                <!--Log In Button -->
                <button onclick="SaveAttendee();"
                        type="submit"
                        class="btn btn-block text-white"
                        style="background-color: #6d6d6d">
                    <b>SignIn</b>
                </button>
            </div>
            <!--Card Body Ends Here -->
        </div>
        <!--Card Ends Here -->
    </div>
    <!--Inner Container Ends Here -->
</div>
